/* Tooltips */
QToolTip {
  background: #FFFFFF;
  color: #1E1E1E;
  border: 1px solid #C7CDD3;
  border-radius: 6px;
  padding: 6px 8px;
  font-size: 12px;
}



/* ---- Tables / Views ---- */
QTableView, QTreeView {
  background: #FFFFFF;
  alternate-background-color: #F9FAFB;
  gridline-color: #E6EBF1;
  selection-background-color: #4F6D7A;
  selection-color: #FFFFFF;
}

/* Headers */
QHeaderView::section {
  background: #E6EBF1;
  color: #314455;
  border: none;
  border-bottom: 1px solid #C7CDD3;
  padding: 6px 8px;
  font-weight: 600;
}
QHeaderView::section:horizontal {
  border-right: 1px solid #C7CDD3;
}

QTreeWidget {
    font-size: 20px;
    border-radius: 2px;
}

/* ---- Inputs ---- */
QLineEdit, QPlainTextEdit, QTextEdit, QComboBox, QSpinBox, QDoubleSpinBox, QDateEdit, QTimeEdit, QDateTimeEdit {
  background: #FFFFFF;
  color: #1E1E1E;
  border: 1px solid #C7CDD3;
  border-radius: 2px;
  padding: 2px 4px;
  font-weight: bold;
}
QLineEdit:focus, QPlainTextEdit:focus, QTextEdit:focus, QComboBox:focus,
QSpinBox:focus, QDoubleSpinBox:focus, QDateEdit:focus, QTimeEdit:focus, QDateTimeEdit:focus {
  border: 1px solid #4F6D7A;
}

/* ---- Scrollbars (subtle) ---- */
QScrollBar:vertical, QScrollBar:horizontal {
  background: transparent;
  margin: 4px;
}
QScrollBar::handle {
  background: #C7CDD3;
  border-radius: 6px;
  min-width: 20px; min-height: 20px;
}
QScrollBar::handle:hover { background: #B6BCC3; }
QScrollBar::add-line, QScrollBar::sub-line { background: transparent; height: 0; width: 0; }

/* ---- Cards / Tiles ---- */
QFrame#ro_tile {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 12px;
  border: 1px solid #E6EBF1;
}
QLabel#title {
  font-weight: 700;
  font-size: 14pt;
  color: #1E1E1E;
}

/* tile scroll area */
QScrollArea#ro_tile_scroll {
  border: none;
  background: transparent;
}
QWidget#ro_tile_viewport {
  background: transparent;
}

/* Role chips on tile */
QWidget#chip_block {
  background: #E6EBF1;
  color: #1E1E1E;
  border-radius: 8px;
  padding: 3px 6px;
}

QCalendarWidget {
    font-weight: bold;
    font-size: 20px;
}

QTabBar::tab {
     background-color: #4A6260;
     color: #ECF4F4;
     border-radius: 1px;
     min-width: 600px;
     min-height: 20px;
}

QTabWidget::tab-bar {
     alignment: left;
}

QTabBar::tab:selected {
     font-weight: 600;
     background-color: #42899B;
     color: #ECF4F4;
     font-weight: bold;
     padding: 4px;
     border: 1px solid #bbb;
     border-radius: 2px;
}

/* ---- Status colors (opt-in via dynamic properties) ---- */
[status="approved"] { border-color: #2E7D32; }
[status="working"]  { border-color: #F9A825; }
[status="checkout"] { border-color: #314455; }
[status="archived"] { border-color: #C7CDD3; opacity: 0.7; }
